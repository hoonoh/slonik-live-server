{
  "name": "@hoonoh/ts-slonik-plugin",
  "version": "1.0.0",
  "description": "Typescript language service plugin for slonik.",
  "keywords": [
    "slonik",
    "typescript language service plugin"
  ],
  "bugs": {
    "url": "https://github.com/hoonoh/ts-slonik-plugin/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hoonoh/ts-slonik-plugin"
  },
  "author": {
    "name": "hoonoh"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "restricted"
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "build": "rimraf dist && cpy ./src/lib/pg/pg.js ./dist/lib/pg && tsc -p tsconfig.build.json",
    "test:db:migrate": "DATABASE_URL=postgres://postgres:secretpassword@localhost:54321/postgres yarn node-pg-migrate -m ./src/test/migrations --tsconfig ./tsconfig.json",
    "test:db:migrate:up": "yarn test:db:migrate up",
    "test:db:migrate:down": "yarn test:db:migrate down",
    "test:db:up": "docker run -d --rm --name ts-slonik-plugin -p 54321:5432 -e POSTGRES_PASSWORD=secretpassword postgres:alpine",
    "test:db:wait": "node ./src/test/ci/wait-for-pg.js",
    "test:db:down": "docker stop ts-slonik-plugin",
    "test:pre": "yarn test:db:up && yarn test:db:wait && yarn test:db:migrate:up",
    "test:generate": "nodemon -w ./src/test/generator/target-src.ts -x \"ts-node -T ./src/test/generator/generate.ts\"",
    "test": "jest",
    "test:post": "yarn test:db:down",
    "test:ci": "yarn test:pre && yarn test && yarn test:post",
    "lint": "eslint './src/*.ts' './src/**/*.ts'",
    "types": "tsc"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogTitle": "# ts-slonik-plugin changelog"
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**/*.ts",
      "!./src/test/**"
    ],
    "coverageDirectory": "./coverage",
    "globals": {
      "ts-jest": {
        "tsconfig": "./tsconfig.json"
      }
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
    "setupFilesAfterEnv": [
      "jest-extended"
    ]
  },
  "devDependencies": {
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/commit-analyzer": "8.0.1",
    "@semantic-release/git": "9.0.0",
    "@semantic-release/github": "7.2.3",
    "@semantic-release/release-notes-generator": "9.0.3",
    "@types/jest": "27.0.1",
    "@types/node": "14.17.11",
    "@types/pg": "8.6.1",
    "@typescript-eslint/eslint-plugin": "4.29.2",
    "@typescript-eslint/parser": "4.29.2",
    "chalk": "4.1.2",
    "commitizen": "4.2.4",
    "cpy-cli": "3.1.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.32.0",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "2.4.0",
    "eslint-plugin-import": "2.24.1",
    "eslint-plugin-jest": "24.4.0",
    "eslint-plugin-prettier": "3.4.1",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-plugin-unused-imports": "1.1.4",
    "husky": "7.0.1",
    "jest": "27.0.6",
    "jest-extended": "0.11.5",
    "mockdate": "3.0.5",
    "node-pg-migrate": "5.10.0",
    "prettier": "2.3.2",
    "rimraf": "3.0.2",
    "semantic-release": "17.4.5",
    "slonik": "24.0.0",
    "slonik-sql-tag-raw": "1.1.1",
    "ts-essentials": "7.0.3",
    "ts-jest": "27.0.5",
    "ts-node": "10.2.1",
    "typescript": "4.3.5"
  },
  "dependencies": {
    "d-forest": "^1.4.2",
    "dotenv": "^10.0.0",
    "pgsql-ast-parser": "^8.0.0",
    "safe-stable-stringify": "^1.1.1",
    "typescript-template-language-service-decorator": "^2.2.0"
  }
}
