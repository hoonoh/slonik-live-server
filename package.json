{
  "name": "@hoonoh/slonik-live-server",
  "version": "0.0.0-development",
  "description": "slonik live server monorepo",
  "private": true,
  "keywords": [
    "slonik",
    "live server"
  ],
  "bugs": {
    "url": "https://github.com/hoonoh/slonik-live-server/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hoonoh/slonik-live-server"
  },
  "author": {
    "name": "hoonoh"
  },
  "license": "MIT",
  "scripts": {
    "build": "lerna run build",
    "prepare": "husky install && lerna run prepare && lerna link --force-local",
    "prepublish": "lerna run prepublish",
    "postinstall": "lerna link --force-local",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "test:ci": "lerna run test:ci",
    "types": "lerna run types"
  },
  "workspaces": [
    "packages/*"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogTitle": "# slonik-live-server changelog"
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "devDependencies": {
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/commit-analyzer": "9.0.1",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.2",
    "@semantic-release/release-notes-generator": "10.0.2",
    "@types/jest": "27.0.2",
    "@types/node": "16.11.6",
    "@types/pg": "8.6.1",
    "@typescript-eslint/eslint-plugin": "5.3.0",
    "@typescript-eslint/parser": "5.3.0",
    "chalk": "4.1.2",
    "commitizen": "4.2.4",
    "cpy-cli": "3.1.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.2.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-airbnb-typescript": "14.0.2",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-jest": "25.2.3",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-plugin-unused-imports": "1.1.5",
    "husky": "7.0.4",
    "jest": "27.3.1",
    "jest-extended": "1.1.0",
    "lerna": "4.0.0",
    "mockdate": "3.0.5",
    "node-pg-migrate": "6.0.0",
    "prettier": "2.4.1",
    "rimraf": "3.0.2",
    "semantic-release": "18.0.0",
    "slonik": "24.2.0",
    "slonik-sql-tag-raw": "1.1.3",
    "ts-essentials": "9.0.0",
    "ts-jest": "27.0.7",
    "ts-node": "10.4.0",
    "typescript": "4.4.4"
  }
}
