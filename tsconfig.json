{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES5",
    "lib": ["DOM", "ES5", "ESNext"],
    "moduleResolution": "node",
    "strict": true,
    "strictPropertyInitialization": false,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist"]
}
