{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES5",
    "lib": ["DOM", "ES5", "ESNext"],
    "moduleResolution": "node",
    "strict": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "sourceRoot": "src",
    "outDir": "lib"
  },
  "exclude": ["node_modules", "lib", "*.spec.ts", "test-workspace"]
}
